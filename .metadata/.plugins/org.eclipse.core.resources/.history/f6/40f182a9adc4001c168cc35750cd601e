		Connection conn = null;

		AlunoDAO dao = new AlunoDAO();
		System.out.println(dao.getAluno().toString());

		System.out.println("-------------------------------------------");

		System.out.println(dao.findById(2));

		System.out.println("-------------------------------------------");

		/*
		 * if (dao.findById(2) != null) { dao.delete(2);
		 * System.out.println("Deletado com sucesso!"); }
		 */
		System.out.println("-------------------------------------------");
		System.out.println(dao.getAluno().toString());

		System.out.println("-------------------------------------------");

		Aluno al = new Aluno();
		al.setNome("Fernando Davi");
		al.setIdade(50);
		al.setEstado("PE");
		dao.create(al);
		dao.getAluno().forEach(System.out::println);

