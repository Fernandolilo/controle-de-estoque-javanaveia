package com.javanaveia.bancodedadosmysql.bancodedadosmysql;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

/**
 * Hello world!
 *
 */
public class App {
	public static void main(String[] args) {

		Connection conn = null;
		String urlConnection = "jdbc:mysql://localhost/test";

		try {
			conn = DriverManager.getConnection(urlConnection, "root", "root");
			System.out.println("Sucesso!");
		} catch (SQLException e) {
			e.printStackTrace();
			System.out.println("falha...");

		} finally {
			try {
				conn.close();
			} catch (SQLException e) {
				e.printStackTrace();
				System.out.println("conex√£o com o banco de dados continua aberto!");
				;
			}

		}
	}
}
